<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>GodelTech.Business</PackageId>
    <VersionPrefix>2.0.0</VersionPrefix>
    <Authors>v.rodchenko</Authors>
    <Company>Godel Technologies</Company>
    <Description>Library for services in business layer.</Description>
    <Copyright>Godel Technologies 2020</Copyright>
    <PackageLicenseUrl>https://github.com/GodelTech/GodelTech.Business/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/GodelTech/GodelTech.Business/wiki</PackageProjectUrl>
    <PackageIconUrl>https://www.gravatar.com/avatar/839234621070de51e7b9cabd5ceee8fe?s=64</PackageIconUrl>
    <RepositoryUrl>https://github.com/GodelTech/GodelTech.Business</RepositoryUrl>
    <PackageTags>Service Business Layer</PackageTags>

    <AnalysisMode>AllEnabledByDefault</AnalysisMode>

    <!-- XML documentation -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Source Link needs this -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- SonarQube needs this -->
    <ProjectGuid>{00000000-0000-0000-0000-000000000010}</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GodelTech.Data" Version="6.5.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.2" />

    <!-- Source Link needs this -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
  </ItemGroup>

</Project>
